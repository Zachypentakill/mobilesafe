<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/blue_bkg" >

        <ImageView
            android:id="@+id/home_iv_logo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="15dp"
            android:src="@drawable/heima" />
        <ImageButton
            android:id="@+id/home_setting_ib"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/setting"
            android:layout_alignParentRight="true"
            android:layout_margin="5dp"
            android:background="@drawable/selector_home_setting_ib"
            android:onClick="enterSetting"
            />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="15dp"
            android:layout_toRightOf="@+id/home_iv_logo"
            android:orientation="vertical" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="传智手机卫士"
                android:textSize="20sp"
                android:textStyle="bold" />

            <com.zachy.ui.MyTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="我是为了显示跑马灯而显示的一大串字符，司不司很无聊的感觉啊。"
                android:textSize="14sp"
                android:textColor="#70ff0000" />
        </LinearLayout>
    </RelativeLayout>

    <GridView
        android:id="@+id/home_gv_gridview"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:numColumns="2"
        android:verticalSpacing="5dp"
        android:horizontalSpacing="5dp"
         >
    </GridView>

</LinearLayout>